<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	 version="3.0">
    <servlet>
        <servlet-name>Student</servlet-name>
        <servlet-class>com.leapfrog.webapp.student.Controller.StudentController </servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>Student</servlet-name>
    <url-pattern>/student</url-pattern>
</servlet-mapping>
 <servlet>
        <servlet-name>Course</servlet-name>
        <servlet-class>com.leapfrog.webapp.student.Controller.CourseController </servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>Course</servlet-name>
    <url-pattern>/course</url-pattern>
</servlet-mapping>
<servlet>
        <servlet-name>Default</servlet-name>
        <servlet-class>com.leapfrog.webapp.student.Controller.DefaultController </servlet-class>
    </servlet>
<servlet-mapping>
    <servlet-name>Default</servlet-name>
    <url-pattern>/</url-pattern>
    <url-pattern>/home</url-pattern>
</servlet-mapping>
    <session-config>
        <session-timeout>
            30 
        </session-timeout>
    </session-config>
</web-app>
